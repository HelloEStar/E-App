<Window x:Name="Main" x:Class="E.Writer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:E.Writer"
        mc:Ignorable="d"
        Title="E Writer" Height="600" Width="900" AllowDrop="True" MinWidth="500" MinHeight="500" SizeChanged="Main_SizeChanged" WindowStartupLocation="CenterScreen" StateChanged="Main_StateChanged" KeyUp="Main_KeyUp" Loaded="Main_Loaded" Closing="Main_Closing" Foreground="Black" Icon="Images/E Writer.ico" Background="Black">
    <Grid x:Name="MainGrid"  >
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="LeftArea" Width="243"/>
            <ColumnDefinition x:Name="MidArea" Width="10" />
            <ColumnDefinition x:Name="RightArea" Width="200*" />
        </Grid.ColumnDefinitions>
        <GridSplitter x:Name="GridSplitter" HorizontalAlignment="Stretch" Grid.Column="1" Focusable="False" IsTabStop="False" PreviewMouseLeftButtonUp="GridSplitter_PreviewMouseLeftButtonUp"/>
        <Label x:Name="BtnHideDir" Content="&lt;" Grid.Column="1" Margin="0,248,0,219" VerticalAlignment="Center" Height="100" Background="#FFF0F0F0" Padding="0,45,0,0" MouseLeftButtonUp="BtnHideDir_MouseLeftButtonUp" ScrollViewer.VerticalScrollBarVisibility="Disabled" Cursor="Hand"/>
        <Grid x:Name="LGrid" RenderTransformOrigin="-0.74,0.18" Background="#FFE1E1E1">
            <ComboBox x:Name="Books" BorderBrush="{x:Null}" VerticalAlignment="Top" Height="30" ToolTip="最近打开过的书籍列表" SelectionChanged="Books_SelectionChanged" Background="White" Padding="0" FontSize="14" VerticalContentAlignment="Center" BorderThickness="0" Cursor="Hand" SizeChanged="Books_SizeChanged" />
            <StackPanel HorizontalAlignment="Left" Height="30" Margin="0,35,0,0" VerticalAlignment="Top" Width="243" Orientation="Horizontal">
                <Button x:Name="BtnOpenBook" Content="{DynamicResource 打开书籍}" HorizontalAlignment="Left" Click="MenuOpen_Click" BorderBrush="{x:Null}" Cursor="Hand" Width="55" Background="{x:Null}" Margin="5,0,0,0"/>
                <Button x:Name="BtnCreateBook" Content="{DynamicResource 创建书籍}" HorizontalAlignment="Left" Click="MenuCreateBook_Click" BorderBrush="{x:Null}" Cursor="Hand" Width="55" Background="{x:Null}" Margin="5,0,0,0"/>
                <Button x:Name="BtnCreateChapter" Content="{DynamicResource 创建卷册}" HorizontalAlignment="Left" Click="MenuCreateChapter_Click" BorderBrush="{x:Null}" Cursor="Hand" Width="55" Background="{x:Null}" Margin="5,0,0,0"/>
                <Button x:Name="BtnCreateEssay" Content="{DynamicResource 创建文章}" HorizontalAlignment="Left" Click="MenuCreateEssay_Click" BorderBrush="{x:Null}" Cursor="Hand" Width="55" Background="{x:Null}" Margin="5,0"/>
            </StackPanel>
            <TreeView x:Name="FilesTree" Margin="10,70,10,40" SelectedItemChanged="FilesTree_SelectedItemChanged" MouseDoubleClick="FilesTree_MouseDoubleClick" KeyUp="FilesTree_KeyUp" BorderBrush="{x:Null}" Padding="0,5" Background="#00000000" >
            </TreeView>
            <TextBox x:Name="NodePath" Text="节点路径" IsReadOnly="True" BorderThickness="0" Margin="10,0,10,10" Height="25" VerticalAlignment="Bottom" VerticalContentAlignment="Center" Background="{x:Null}"/>
        </Grid>
        <Grid x:Name="RGrid" Grid.Column="2" MinWidth="385" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <!--<Rectangle x:Name="Rectangle" Fill="#FFF0F0F0" Height="25" VerticalAlignment="Top"/>-->
            <TextBox x:Name="EssayName" Margin="10,5,165,0" Height="50" VerticalAlignment="Top" ToolTip="当前未选中任何文件" VerticalContentAlignment="Center" GotFocus="EssayName_GotFocus" KeyUp="EssayName_KeyUp" FontSize="30" BorderBrush="{x:Null}" CaretBrush="Black"/>
            <Label x:Name="Words" Content="字数：0" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Padding="5,0" Height="20" ScrollViewer.VerticalScrollBarVisibility="Disabled" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" MaxWidth="150"/>
            <Label x:Name="RowAndColumn" Content="行：0，列：0" HorizontalAlignment="Right" Margin="0,35,10,0" VerticalAlignment="Top" Padding="5,0" Height="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" MaxWidth="150"/>
            <TextBox x:Name="FileContent" VerticalScrollBarVisibility="Auto" Margin="10,60,10,40" AcceptsReturn="true" TextWrapping="Wrap" 
                 TextChanged="FileContent_TextChanged" Background="White" KeyUp="FileContent_KeyUp" 
                 SelectionChanged="FileContent_SelectionChanged" SizeChanged="FileContent_SizeChanged" 
                 LostFocus="FileContent_LostFocus" CaretBrush="Black" PreviewTextInput="FileContent_PreviewTextInput" />
            <Label x:Name="HelpMessage" Content="帮助消息" Margin="10,0,10,10" Height="25" VerticalAlignment="Bottom"/>

        </Grid>
    </Grid>
</Window>
