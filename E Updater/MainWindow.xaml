<Window x:Class="E.Updater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:E.Updater"
        xmlns:share="clr-namespace:SharedProject"
        xmlns:Properties="clr-namespace:E.Updater.Properties"
        mc:Ignorable="d"
        Name="Main" Title="E Updater" Height="515" Width="560" MinWidth="560" MinHeight="500"  Icon="Resources/E Updater.ico"
        WindowStartupLocation="CenterScreen" Closing="Main_Closing" Loaded="Main_Loaded" GotFocus="Main_GotFocus">

    <Window.Resources>
        <Properties:Settings x:Key="Settings" />
    </Window.Resources>
    
    <Grid x:Name="GrdMain">
        <DockPanel>
            <!--菜单栏-->
            <Grid x:Name="PanMenu" Style="{DynamicResource 菜单栏样式}" >
                <DockPanel>
                    <StackPanel>
                        <Button x:Name="BtnSetting" Content="{DynamicResource 设置}" Style="{DynamicResource 菜单按钮样式}" Click="BtnSetting_Click"/>
                        <Button x:Name="BtnAbout" Content="{DynamicResource 关于}" Style="{DynamicResource 菜单按钮样式}" Click="BtnAbout_Click"/>
                    </StackPanel>
                </DockPanel>
            </Grid>
            <!--工具栏 文件-->
            <!--工具栏 编辑-->
            <!--工具栏 设置-->
            <Grid x:Name="PanSetting" Style="{DynamicResource 工具栏样式}" Visibility="Collapsed" >
                <DockPanel>
                    <WrapPanel Style="{DynamicResource 水平流式面板样式}" DockPanel.Dock="Bottom" ItemWidth="120">
                        <Button x:Name="BtnSaveSettings" Content="{DynamicResource 保存}" Style="{DynamicResource 自由按钮样式}" Click="BtnSaveSettings_Click"/>
                        <Button x:Name="BtnResetSettings" Content="{DynamicResource 重置}" Style="{DynamicResource 自由按钮样式}" Click="BtnResetSettings_Click"/>
                    </WrapPanel>

                    <ScrollViewer>
                        <StackPanel DockPanel.Dock="Top">
                            <Label Content="{DynamicResource 语言}" Style="{DynamicResource 标题标签样式}"/>
                            <ComboBox x:Name="CbbLanguages" Style="{DynamicResource 下拉框样式}" SelectionChanged="CbbLanguages_SelectionChanged"
                                      SelectedIndex="{Binding Source={StaticResource Settings}, Path=Default.Language,Mode=TwoWay}"/>

                            <Label Content="{DynamicResource 主题}" Style="{DynamicResource 标题标签样式}"/>
                            <ComboBox x:Name="CbbThemes" Style="{DynamicResource 下拉框样式}" SelectionChanged="CbbThemes_SelectionChanged"
                                      SelectedIndex="{Binding Source={StaticResource Settings}, Path=Default.Theme,Mode=TwoWay}"/>
                        </StackPanel>
                    </ScrollViewer>
                </DockPanel>
            </Grid>
            <!--工具栏 关于-->
            <Grid x:Name="PanAbout" Style="{DynamicResource 工具栏样式}" Visibility="Collapsed">
                <Grid Style="{DynamicResource 工具栏样式}">
                    <ScrollViewer>
                        <StackPanel DockPanel.Dock="Top">
                            <DockPanel>
                                <Button x:Name="BtnHomePage" Content="{DynamicResource 前往}" ToolTip="F1" Style="{DynamicResource 自由按钮样式}" Click="BtnHomePage_Click" DockPanel.Dock="Right" Width="80"/>
                                <Label Content="{DynamicResource 官网}" Style="{DynamicResource 标题标签样式}"/>
                            </DockPanel>
                            <TextBlock x:Name="TxtHomePage" Text="?" Style="{DynamicResource 文本显示框样式}"/>

                            <DockPanel>
                                <Button x:Name="BtnGitHubPage" Content="{DynamicResource 前往}" ToolTip="F2" Style="{DynamicResource 自由按钮样式}" Click="BtnGitHubPage_Click" DockPanel.Dock="Right" Width="80"/>
                                <Label Content="{DynamicResource 开源}" Style="{DynamicResource 标题标签样式}"/>
                            </DockPanel>
                            <TextBlock x:Name="TxtGitHubPage" Text="?" Style="{DynamicResource 文本显示框样式}"/>

                            <DockPanel>
                                <Button x:Name="BtnQQGroup" Content="{DynamicResource 前往}" ToolTip="F3" Style="{DynamicResource 自由按钮样式}" Click="BtnQQGroup_Click" DockPanel.Dock="Right" Width="80"/>
                                <Label Content="{DynamicResource 讨论}" Style="{DynamicResource 标题标签样式}"/>
                            </DockPanel>
                            <TextBlock x:Name="TxtQQGroup" Text="?" Style="{DynamicResource 文本显示框样式}"/>

                            <DockPanel>
                                <Button x:Name="BtnBitCoinAddress" Content="{DynamicResource 复制}" Style="{DynamicResource 自由按钮样式}" Click="BtnBitCoinAddress_Click" DockPanel.Dock="Right" Width="80"/>
                                <Label Content="{DynamicResource 赞助}"  Style="{DynamicResource 标题标签样式}"/>
                            </DockPanel>
                            <TextBlock x:Name="TxtBitCoinAddress" Text="?" Style="{DynamicResource 文本显示框样式}"/>

                            <Label Content="{DynamicResource 名称}" Style="{DynamicResource 标题标签样式}"/>
                            <TextBlock x:Name="TxtThisName" Text="?" Style="{DynamicResource 文本显示框样式}"/>
                            <Label Content="{DynamicResource 说明}" Style="{DynamicResource 标题标签样式}"/>
                            <TextBlock x:Name="TxtDescription" Text="?" Style="{DynamicResource 文本显示框样式}"/>
                            <Label Content="{DynamicResource 作者}" Style="{DynamicResource 标题标签样式}"/>
                            <TextBlock x:Name="TxtDeveloper" Text="?" Style="{DynamicResource 文本显示框样式}"/>
                            <Label Content="{DynamicResource 版本}"  Style="{DynamicResource 标题标签样式}"/>
                            <TextBlock x:Name="TxtVersion" Text="?" Style="{DynamicResource 文本显示框样式}"/>
                            <Label Content="{DynamicResource 日志}" Style="{DynamicResource 标题标签样式}"/>

                            <TextBlock x:Name="TxtUpdateNote" Text="?" Style="{DynamicResource 文本显示框样式}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

            </Grid>

            <!--工作区-->
            <DockPanel Background="{DynamicResource 三级背景颜色}">
                <DockPanel DockPanel.Dock="Bottom" Height="30" Background="{DynamicResource 二级背景颜色}">
                    <Button x:Name="Btn_Refresh" Content="刷新" Style="{DynamicResource 自由按钮样式}" Click="BtnRefresh_Click" HorizontalAlignment="Right" Width="60" DockPanel.Dock="Right"/>
                    <Label x:Name="LblMessage" Content="提示" Style="{DynamicResource 自由标签样式}"/>
                </DockPanel>
                <ScrollViewer>
                    <StackPanel>
                        <StackPanel Background="{DynamicResource 二级背景颜色}">
                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                                <Label x:Name="Lbl_EU" Content="E Updater" Cursor="Hand" ToolTip="查看详情" Style="{DynamicResource 标题标签样式}" MouseLeftButtonUp="Lbl_EU_MouseLeftButtonUp" DockPanel.Dock="Top" Padding="5,0,0,0"/>
                                <TextBlock x:Name="Lbl_EUThisVer" Text="未安装" Style="{DynamicResource 文本显示框样式}" Margin="5"/>
                                <TextBlock x:Name="Lbl_EUNewVer" Text="未检测" Style="{DynamicResource 文本显示框样式}" Margin="5"/>
                            </StackPanel>
                            <DockPanel Height="40">
                                <TextBox x:Name="TBx_EUPath" ToolTip="{DynamicResource 目录}" IsReadOnly="True" Style="{DynamicResource 文本输入框样式}" MinWidth="150"/>
                            </DockPanel>
                            <Grid>
                                <WrapPanel HorizontalAlignment="Left" ItemHeight="30" ItemWidth="60">
                                    <Button x:Name="Btn_EUBrowse" Content="{DynamicResource 浏览}" Style="{DynamicResource 自由按钮样式}" Click="Btn_EUBrowse_Click" IsEnabled="False" Visibility="Collapsed"/>
                                    <Button x:Name="Btn_EUInstall" Content="{DynamicResource 安装}" Style="{DynamicResource 自由按钮样式}" Click="Btn_EUInstall_Click"/>
                                    <Button x:Name="Btn_EUUninstall" Content="{DynamicResource 卸载}" Style="{DynamicResource 自由按钮样式}" Click="Btn_EUUninstall_Click" IsEnabled="False" Visibility="Collapsed"/>
                                </WrapPanel>
                                <WrapPanel HorizontalAlignment="Right" ItemHeight="30" ItemWidth="60">
                                    <Button x:Name="Btn_EURun" Content="{DynamicResource 终止}" Style="{DynamicResource 自由按钮样式}" Click="Btn_EURun_Click"/>
                                </WrapPanel>
                            </Grid>
                        </StackPanel>
                        <Grid Height="5"/>
                        <StackPanel Background="{DynamicResource 二级背景颜色}">
                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                                <Label x:Name="Lbl_EW" Content="E Writer" Cursor="Hand" ToolTip="查看详情" Style="{DynamicResource 标题标签样式}" MouseLeftButtonUp="Lbl_EW_MouseLeftButtonUp" DockPanel.Dock="Top" Padding="5,0,0,0"/>
                                <TextBlock x:Name="Lbl_EWThisVer" Text="未安装" Style="{DynamicResource 文本显示框样式}" Margin="5"/>
                                <TextBlock x:Name="Lbl_EWNewVer" Text="未检测" Style="{DynamicResource 文本显示框样式}" Margin="5"/>
                            </StackPanel>
                            <DockPanel Height="40">
                                <TextBox x:Name="TBx_EWPath" ToolTip="{DynamicResource 目录}" IsReadOnly="True" Style="{DynamicResource 文本输入框样式}" MinWidth="150"/>
                            </DockPanel>
                            <Grid>
                                <WrapPanel HorizontalAlignment="Left" ItemHeight="30" ItemWidth="60">
                                    <Button x:Name="Btn_EWBrowse" Content="{DynamicResource 浏览}" Style="{DynamicResource 自由按钮样式}" Click="Btn_EWBrowse_Click"/>
                                    <Button x:Name="Btn_EWInstall" Content="{DynamicResource 安装}" Style="{DynamicResource 自由按钮样式}" Click="Btn_EWInstall_Click"/>
                                    <Button x:Name="Btn_EWUninstall" Content="{DynamicResource 卸载}" Style="{DynamicResource 自由按钮样式}" Click="Btn_EWUninstall_Click"/>
                                </WrapPanel>
                                <WrapPanel HorizontalAlignment="Right" ItemHeight="30" ItemWidth="60">
                                    <Button x:Name="Btn_EWRun" Content="{DynamicResource 启动}" Style="{DynamicResource 自由按钮样式}" Click="Btn_EWRun_Click"/>
                                </WrapPanel>
                            </Grid>
                        </StackPanel>
                        <Grid Height="5"/>
                        <StackPanel Background="{DynamicResource 二级背景颜色}">
                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                                <Label x:Name="Lbl_EP" Content="E Player" Cursor="Hand" ToolTip="查看详情" Style="{DynamicResource 标题标签样式}" MouseLeftButtonUp="Lbl_EP_MouseLeftButtonUp" DockPanel.Dock="Top" Padding="5,0,0,0"/>
                                <TextBlock x:Name="Lbl_EPThisVer" Text="未安装" Style="{DynamicResource 文本显示框样式}" Margin="5"/>
                                <TextBlock x:Name="Lbl_EPNewVer" Text="未检测" Style="{DynamicResource 文本显示框样式}" Margin="5"/>
                            </StackPanel>
                            <DockPanel Height="40">
                                <TextBox x:Name="TBx_EPPath" ToolTip="{DynamicResource 目录}" IsReadOnly="True" Style="{DynamicResource 文本输入框样式}" MinWidth="150"/>
                            </DockPanel>
                            <Grid>
                                <WrapPanel HorizontalAlignment="Left" ItemHeight="30" ItemWidth="60">
                                    <Button x:Name="Btn_EPBrowse" Content="{DynamicResource 浏览}" Style="{DynamicResource 自由按钮样式}" Click="Btn_EPBrowse_Click"/>
                                    <Button x:Name="Btn_EPInstall" Content="{DynamicResource 安装}" Style="{DynamicResource 自由按钮样式}" Click="Btn_EPInstall_Click"/>
                                    <Button x:Name="Btn_EPUninstall" Content="{DynamicResource 卸载}" Style="{DynamicResource 自由按钮样式}" Click="Btn_EPUninstall_Click"/>
                                </WrapPanel>
                                <WrapPanel HorizontalAlignment="Right" ItemHeight="30" ItemWidth="60">
                                    <Button x:Name="Btn_EPRun" Content="{DynamicResource 启动}" Style="{DynamicResource 自由按钮样式}" Click="Btn_EPRun_Click"/>
                                </WrapPanel>
                            </Grid>
                        </StackPanel>
                        <Grid Height="5"/>
                        <StackPanel Background="{DynamicResource 二级背景颜色}">
                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                                <Label x:Name="Lbl_EN" Content="E Number" Cursor="Hand" ToolTip="查看详情" Style="{DynamicResource 标题标签样式}" MouseLeftButtonUp="Lbl_EN_MouseLeftButtonUp" DockPanel.Dock="Top" Padding="5,0,0,0"/>
                                <TextBlock x:Name="Lbl_ENThisVer" Text="未安装" Style="{DynamicResource 文本显示框样式}" Margin="5"/>
                                <TextBlock x:Name="Lbl_ENNewVer" Text="未检测" Style="{DynamicResource 文本显示框样式}" Margin="5"/>
                            </StackPanel>
                            <DockPanel Height="40">
                                <TextBox x:Name="TBx_ENPath" ToolTip="{DynamicResource 目录}" IsReadOnly="True" Style="{DynamicResource 文本输入框样式}" MinWidth="150"/>
                            </DockPanel>
                            <Grid>
                                <WrapPanel HorizontalAlignment="Left" ItemHeight="30" ItemWidth="60">
                                    <Button x:Name="Btn_ENBrowse" Content="{DynamicResource 浏览}" Style="{DynamicResource 自由按钮样式}" Click="Btn_ENBrowse_Click"/>
                                    <Button x:Name="Btn_ENInstall" Content="{DynamicResource 安装}" Style="{DynamicResource 自由按钮样式}" Click="Btn_ENInstall_Click"/>
                                    <Button x:Name="Btn_ENUninstall" Content="{DynamicResource 卸载}" Style="{DynamicResource 自由按钮样式}" Click="Btn_ENUninstall_Click"/>
                                </WrapPanel>
                                <WrapPanel HorizontalAlignment="Right" ItemHeight="30" ItemWidth="60">
                                    <Button x:Name="Btn_ENRun" Content="{DynamicResource 启动}" Style="{DynamicResource 自由按钮样式}" Click="Btn_ENRun_Click"/>
                                </WrapPanel>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>
