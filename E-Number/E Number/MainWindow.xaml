<Window x:Name="mainWindow" x:Class="E_Number.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:E_Number"
        mc:Ignorable="d"
        Title="E Number" Height="300" Width="500" SizeChanged="Window_SizeChanged" MinWidth="500" MinHeight="300" Icon="Images/E Number.ico" BorderThickness="0" WindowStartupLocation="CenterScreen">
    <Grid x:Name="GrdMain">
        <Rectangle Stroke="Black" Margin="0,10,10,10" HorizontalAlignment="Right" Width="120"/>
        <DockPanel HorizontalAlignment="Right" LastChildFill="False" Margin="0,10,10,10" Width="120">
            <Label x:Name="LabMinValue" Content="设置最小值" Margin="10,10,10,0" VerticalAlignment="Top" DockPanel.Dock="Top"/>
            <TextBox x:Name="TxtMinValue" Height="20" Margin="10,0" TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="TxtMinValue_TextChanged" DockPanel.Dock="Top" KeyUp="TxtMinValue_KeyUp"/>
            <Label x:Name="LabMaxValue" Content="设置最大值" Margin="10,10,10,0" VerticalAlignment="Top" DockPanel.Dock="Top"/>
            <TextBox x:Name="TxtMaxValue" Height="20" Margin="10,0" TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="TxtMaxValue_TextChanged" DockPanel.Dock="Top" KeyUp="TxtMaxValue_KeyUp"/>
            <Button x:Name="BtnSetRange" Content="修改随机范围" Margin="10,10,10,0" Height="27" VerticalAlignment="Top" RenderTransformOrigin="0.467,0" Click="BtnSetRange_Click" DockPanel.Dock="Top"/>
            <Button x:Name="BtnCreate" Content="生成" Margin="10,0,10,10" Height="75" FontSize="24" Click="BtnCreate_Click" DockPanel.Dock="Bottom"/>
        </DockPanel>
        <TextBox x:Name="TxtValue" FontSize="200" Margin="10,10,140,10" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" IsReadOnly="True" BorderBrush="{x:Null}" SelectionBrush="#FF0078D7" Text="0" Background="{x:Null}" Padding="0"/>

    </Grid>
</Window>
