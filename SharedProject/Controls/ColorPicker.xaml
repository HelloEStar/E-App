<UserControl x:Class="SharedProject.ColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30"
             d:DesignWidth="240">

    <StackPanel Orientation="Horizontal" Margin="5" Height="20">
        <Label
            x:Name="TxtName" 
            Style="{DynamicResource 二级自由标签}"
            Margin="30,0,5,0"
            Width="60"
            Content="一级前景色" />
        <Button
            x:Name="RctColor" 
            Margin="5,0"
            Width="20"
            Background="Red" 
            BorderBrush="{DynamicResource 一级背景色}"
            BorderThickness="2"/>
        <Label 
            x:Name="TxtColor" 
            Style="{DynamicResource 二级自由标签}"
            Margin="5,0"
            Width="65"
            Content="#00000000" />
    </StackPanel>
</UserControl>
